<form class="new_cat" action="/cats" method="post">
  <input type="hidden" name="_method" value="patch">
  <label> Name
    <input type ="text" name = "cats[name]" value="<%= @cat.name %>">
  </label>



  <label>Sex
    <label>F
      <input type="radio" name="cats[sex]" value="F" <%= "checked" if @cat.sex == "F" %>>
    </label>
    <label>M
    <input type="radio" name="cats[sex]" value="M" <%= "checked" if @cat.sex == "M" %>>
    </label>
  </label>


  <label> Birth Date
    <input type="Date" name="cats[birth_date"] value = "<%= @cat.birth_date.to_s %>" >
  </label>

  <label> Color
    <select name = "cats[color]" default="">
      <option value="blue" <%= "selected" if @cat.color == "blue" %>>blue</option>
      <option value="fuschia" <%= "selected" if @cat.color == "fuschia" %>>fuschia</option>
      <option value="yellow" <%= "selected" if @cat.color == "yellow" %> >yellow</option>
      <option value="chartreus" <%= "selected" if @cat.color == "chartreus" %>>chartreus</option>
      <option value="red" <%= "selected" if @cat.color == "red" %>>red</option>
      <option value="turqoise" <%= "selected" if @cat.color == "turqoise" %>>turqoise</option>
      <option value="puce" <%= "selected" if @cat.color == "puce" %>>puce</option>
    </select>
  </label>

  <label>Description
    <textarea name="cats[description]" rows="10" cols="40" placeholder="Describe the Kitty"> <%= @cat.description %></textarea>
  </label>
</form>
